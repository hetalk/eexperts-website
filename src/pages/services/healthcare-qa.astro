<script>
  // FAQ functionality
  function toggleFAQ(index) {
    const answer = document.getElementById(`faq-answer-${index}`);
    const icon = document.getElementById(`faq-icon-${index}`);

    if (answer.classList.contains('hidden')) {
      answer.classList.remove('hidden');
      icon.style.transform = 'rotate(180deg)';
    } else {
      answer.classList.add('hidden');
      icon.style.transform = 'rotate(0deg)';
    }

    // Track FAQ engagement
    if (window.analytics) {
      window.analytics.trackEngagement('FAQ Toggle', 'Healthcare QA Page');
    }
  }

  // Track page-specific analytics
  document.addEventListener('DOMContentLoaded', function() {
    if (window.analytics) {
      window.analytics.trackEvent('Service Page View', {
        'Service': 'Healthcare Documentation QA',
        'Page': 'Dedicated Landing Page'
