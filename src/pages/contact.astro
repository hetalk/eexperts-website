---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us">
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-primary to-secondary text-white py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-center">Contact Us</h1>
      <p class="text-xl text-center mt-4">Let's discuss how we can help your business</p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
        
        <!-- Contact Form -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
          <form id="contact-form" class="space-y-4" action="/api/contact" method="POST">
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">
                  First Name <span class="text-red-500">*</span>
                </label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName" 
                  required 
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
                  placeholder="John"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">
                  Last Name <span class="text-red-500">*</span>
                </label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName" 
                  required 
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
                  placeholder="Doe"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                Email Address <span class="text-red-500">*</span>
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">
                Phone Number
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
                placeholder="+91 98765 43210"
              />
            </div>

            <div>
              <label for="company" class="block text-sm font-medium text-gray-700 mb-1">
                Company
              </label>
              <input 
                type="text" 
                id="company" 
                name="company" 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
                placeholder="Your Company Name"
              />
            </div>

            <div>
              <label for="service" class="block text-sm font-medium text-gray-700 mb-1">
                Service Interested In <span class="text-red-500">*</span>
              </label>
              <select 
                id="service" 
                name="service" 
                required 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
              >
                <option value="">Select a service</option>
                <optgroup label="Ritesource Infosystems">
                  <option value="healthcare-qa">Healthcare Documentation QA</option>
                  <option value="software-testing">Software Testing Services</option>
                </optgroup>
                <optgroup label="eExperts Data Solutions">
                  <option value="geospatial">Geospatial Data Services</option>
                  <option value="electronics">Electronics Data Solutions</option>
                  <option value="ai-workflows">AI-Driven Workflows</option>
                </optgroup>
                <option value="other">Other / Multiple Services</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">
                Message <span class="text-red-500">*</span>
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="4" 
                required 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
                placeholder="Tell us about your project requirements..."
              ></textarea>
            </div>

            <div>
              <label for="attachment" class="block text-sm font-medium text-gray-700 mb-1">
                Attachment (Optional)
              </label>
              <input 
                type="file" 
                id="attachment" 
                name="attachment" 
                accept=".pdf,.doc,.docx,.xls,.xlsx,.zip"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
              />
              <p class="text-xs text-gray-500 mt-1">Accepted formats: PDF, DOC, DOCX, XLS, XLSX, ZIP (Max 10MB)</p>
            </div>

            <button 
              type="submit" 
              class="w-full bg-gradient-to-r from-primary to-secondary text-white font-semibold py-3 px-6 rounded-lg hover:opacity-90 transition"
            >
              Send Message
            </button>
          </form>

          <!-- Success Message (hidden by default) -->
          <div id="success-message" class="hidden mt-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
            Thank you for your message! We'll get back to you within 24 hours.
          </div>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <!-- Ahmedabad Office -->
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h3 class="text-xl font-bold mb-4 text-primary">Ahmedabad Office</h3>
            <div class="space-y-3">
              <div class="flex items-start">
                <span class="text-2xl mr-3">üìç</span>
                <div>
                  <p>D-607 Ganesh Glory-11,</p>
                  <p>Jagatpur road, off SG Highway,</p>
                  <p>Ahmedabad - 382470</p>
                  <p>Gujarat, India</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Valsad Office -->
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h3 class="text-xl font-bold mb-4 text-secondary">Valsad Office</h3>
            <div class="space-y-3">
              <div class="flex items-start">
                <span class="text-2xl mr-3">üìç</span>
                <div>
                  <p>506, 5th floor, Millennium Empire,</p>
                  <p>Near D-Mart, Valsad - 396001</p>
                  <p>Gujarat, India</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Email Addresses -->
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h3 class="text-xl font-bold mb-4">Email Us</h3>
            <div class="space-y-2">
              <a href="mailto:info@ritesource.com" class="flex items-center text-primary hover:text-secondary transition">
                <span class="text-2xl mr-3">‚úâÔ∏è</span>
                info@ritesource.com
              </a>
              <a href="mailto:info@eexperts.info" class="flex items-center text-primary hover:text-secondary transition">
                <span class="text-2xl mr-3">‚úâÔ∏è</span>
                info@eexperts.info
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="bg-gray-100 py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-2xl font-bold text-center mb-8">Find Us</h2>
        <div class="bg-white rounded-lg shadow-lg p-2">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3670.741!2d72.55147!3d23.0697!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2sGanesh%20Glory%2011%2C%20Jagatpur%2C%20Ahmedabad!5e0!3m2!1sen!2sin!4v1234567890"
            width="100%" 
            height="400" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            class="rounded-lg"
          ></iframe>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Simple form handling (will be replaced with Cloudflare Workers later)
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMessage = document.getElementById('success-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // For now, just show success message
    // Later this will send to Cloudflare Workers
    successMessage?.classList.remove('hidden');
    form.reset();
    
    // Scroll to success message
    successMessage?.scrollIntoView({ behavior: 'smooth' });
    
    // Hide message after 5 seconds
    setTimeout(() => {
      successMessage?.classList.add('hidden');
    }, 5000);
  });
</script>