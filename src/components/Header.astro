---
/*
 * Enhanced Header Component with Company Logos
 * Last Updated: 2025-09-16 16:55:42 IST
 *
 * Features:
 * - Company logos integration
 * - Brand colors from logo analysis
 * - Enhanced visual identity
 */

const currentPath = Astro.url.pathname;
---

<header class="bg-white dark:bg-gray-800 shadow-lg sticky top-0 z-50 transition-colors duration-200">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <!-- Logo Section -->
      <div class="flex items-center space-x-4">
        <a href="/" class="flex items-center space-x-4">
          <!-- Company Logos -->
          <div class="flex items-center space-x-3">
            <!-- Ritesource Logo -->
            <div class="flex items-center space-x-2">
              <img
                src="/images/Ritesource_Logo.png"
                alt="Ritesource Infosystems"
                class="h-10 w-auto"
                loading="eager"
              />
            </div>

            <!-- Separator -->
            <div class="text-2xl font-bold text-gray-600 dark:text-gray-400">&</div>

            <!-- eExperts Logo -->
            <div class="flex items-center space-x-2">
              <img
                src="/images/eExperts_Logo.png"
                alt="Efficiency Experts Data Solutions"
                class="h-10 w-auto"
                loading="eager"
              />
            </div>
          </div>

          <!-- Text Fallback for smaller screens -->
          <div class="hidden sm:block text-lg font-semibold">
            <span class="text-text-primary">Ritesource</span>
            <span class="text-gray-700 dark:text-gray-300 mx-1">&</span>
            <span class="text-text-secondary">eExperts</span>
          </div>
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class={`hover:text-secondary transition ${currentPath === '/' ? 'text-secondary font-semibold' : 'text-gray-700 dark:text-gray-300'}`}>Home</a>
        <a href="/about" class={`hover:text-secondary transition ${currentPath === '/about/' ? 'text-secondary font-semibold' : 'text-gray-700 dark:text-gray-300'}`}>About Us</a>
        <a href="/services" class={`hover:text-secondary transition ${currentPath === '/services/' ? 'text-secondary font-semibold' : 'text-gray-700 dark:text-gray-300'}`}>Services</a>
        <a href="/resources" class={`hover:text-secondary transition ${currentPath === '/resources/' ? 'text-secondary font-semibold' : 'text-gray-700 dark:text-gray-300'}`}>Resources</a>
        <a href="/contact" class={`hover:text-secondary transition ${currentPath === '/contact/' ? 'text-secondary font-semibold' : 'text-gray-700 dark:text-gray-300'}`}>Contact</a>
        
        <!-- Dark Mode Toggle -->
        <button 
          onclick="toggleDarkMode()"
          class="p-2 rounded-lg bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 transition"
          aria-label="Toggle dark mode"
        >
          <!-- Sun Icon (Light Mode) -->
          <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
          </svg>
          <!-- Moon Icon (Dark Mode) -->
          <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
        </button>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="flex items-center space-x-4 md:hidden">
        <!-- Mobile Dark Mode Toggle -->
        <button 
          onclick="toggleDarkMode()"
          class="p-2 rounded-lg bg-gray-100 dark:bg-gray-700"
          aria-label="Toggle dark mode"
        >
          <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
          </svg>
          <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
        </button>
        
        <!-- Mobile Menu Toggle -->
        <button id="mobile-menu-button" class="text-gray-700 dark:text-gray-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <nav id="mobile-menu" class="hidden md:hidden pb-4">
      <a href="/" class="block py-2 text-gray-700 dark:text-gray-300 hover:text-secondary transition">Home</a>
      <a href="/about" class="block py-2 text-gray-700 dark:text-gray-300 hover:text-secondary transition">About Us</a>
      <a href="/services" class="block py-2 text-gray-700 dark:text-gray-300 hover:text-secondary transition">Services</a>
      <a href="/resources" class="block py-2 text-gray-700 dark:text-gray-300 hover:text-secondary transition">Resources</a>
      <a href="/contact" class="block py-2 text-gray-700 dark:text-gray-300 hover:text-secondary transition">Contact</a>
    </nav>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>